  Person(user, "User", "Media Consumer")

  System_Boundary(prism_system, "Prism IPTV System") {
    Container(spa, "Single Page Application", "React, Vite, TypeScript", "The main user interface for browsing and playing media")
    Container(backend, "Remote Server", "Node.js, Express, WS", "Handles local remote pairing, EPG generation, and proxying")
    ContainerDb(local_storage, "Local Storage", "Browser API", "Stores user settings, favorites, and history")
