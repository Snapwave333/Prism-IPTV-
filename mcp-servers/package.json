{
  "name": "@prism/mcp-servers",
  "version": "1.0.0",
  "description": "Model Context Protocol servers for Lumen AI agent controlling Prism IPTV",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start:control": "node dist/prism-control-server/index.js",
    "start:media": "node dist/media-knowledge-server/index.js",
    "start:memory": "node dist/user-memory-server/index.js",
    "start:all": "concurrently \"npm:start:control\" \"npm:start:media\" \"npm:start:memory\"",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ws": "^8.16.0",
    "fast-xml-parser": "^5.3.3",
    "better-sqlite3": "^9.2.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@types/better-sqlite3": "^7.6.8",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
